/**index.wxss**/
.navbar {
    display: flex;
    border-bottom: 1px solid #eee;
}
.navbar-item {
    flex: 1.0;
    text-align: center;
    font-size: 14px;
    color: #999;
    margin-bottom: -1px;
}
.navbar-text {
    display: block;
    width: 30px;
    padding: 10px;
    margin: auto;
}
.navbar-text.active {
    border-bottom: 2px solid #000;
    color: #000;
    font-weight: bold;
}

.hidden {
    display: none;
}

.vol-meta {
  padding: 10rpx 5rpx;
  font-size: 12px;
  color: #888;
}

.vol-title {
  font-size: 18px;
}

.vol-author {
  float: right;
}

.vol-content {
  margin-top: 30rpx;
  padding: 0 5rpx;
  font-size: 14px;
  line-height: 1.4;
}

.vol-content-text {
  width: 100%;
  min-height: 200rpx;
  display: inline-block;
}
