/**app.wxss**/
@import "/wxParse/wxParse.wxss";

page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
  box-sizing: border-box;
}

.vol-meta {
  padding: 10rpx 20rpx;
  font-size: 12px;
  color: #888;
}

.vol-title {
  font-size: 16px;
  color: #1abc9c;
}

.vol-author {
  float: right;
}

.vol-content {
  margin-top: 30rpx;
  padding: 0 15rpx;
  font-size: 12px;
  line-height: 1.4;
}

.vol-content-text {
  width: 100%;
  color: #384452;
}
